
<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'navbar-form navbar-right'} ) do |f| %>
                                   
  <div class="form-group">
    <%= f.email_field :email, autofocus: true ,placeholder:"Email", class: "form-control form-control-nav"%>                                        
  </div>
    
  <div class="form-group">
    <%= f.password_field :password,placeholder: "Password", autocomplete: "off" , class: "form-control form-control-nav"%>
  </div>
        
  <%= f.submit "Log in", class: "btn btn-primary" %>
                                         
<% end %>   