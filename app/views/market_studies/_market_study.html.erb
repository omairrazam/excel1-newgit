
<div class="blog-post">

  <h2 class="blog-post-title"><%=link_to  market_study.title, market_study %></h2>
  <p class="blog-post-meta"><%= time_ago_in_words(market_study.created_at) %> ago by <a href="#"><%= market_study.user.email %></a></p>
  <% if user_signed_in? and current_user.is_admin? %>
  <a href="#"   data-toggle="modal" data-target="#img-modal">
    <img class="img-responsive" src="http://placehold.it/1300x300" alt="">
  </a>
  <br>
  <div >
    <%= link_to 'Show', market_study , :class =>"btn btn-info btn-xs"%>
    <%= link_to 'Edit', edit_market_study_path(market_study) , :class =>"btn btn-info btn-xs"%>
    <%= link_to 'Destroy', market_study, :class =>"btn btn-info btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
  <p>
    <%= market_study.content[0..150].gsub(/\s\w+\s*$/,'...').html_safe  %><span class = "read_more"><%= link_to 'read more >>>', market_study %></span>
  </p>
</div><!-- /.blog-post -->




<!-- Modal -->
<div id="img-modal" class="modal fade market-study" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <img class="img-responsive" src="http://placehold.it/1400x600" alt="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>