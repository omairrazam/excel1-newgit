
<%= render :partial => "market_study", :locals => {:market_study => @market_study, :page => "show"} %>

<!-- Modal -->
<div id="img-modal" class="modal fade market-study" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Right click image to save original it</h4>
      </div>
      <div class="modal-body">
       

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
  $(function(){
    $(".market_image").click(function(){
      $('#img-modal').modal('show');
      $("#img-modal .modal-body").html('<img src= "'+$(this).attr('src')+'">');
    });
  });
</script>

<style type="text/css">
  /* to hide ckeditor image, custom class is given to it*/
  .market_image:hover{
    cursor: pointer;
  }
  /* Important part */
  .modal-dialog{
      overflow-x: initial !important
  }
  .modal-body{
      overflow-x: auto;
  }
</style>