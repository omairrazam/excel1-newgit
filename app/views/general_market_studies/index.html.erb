

<div class="row narrow-container">

  <h2>General Market Studies</h2>
  <hr>
  
  <table class="table table-striped">
  <thead>
    <thead>
      <tr>
        <th>Date of Post</th>
        <th>Post Title</th>
        <th>Type</th>
        
        <% if current_user.present? and current_user.is_admin? %>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% @general_market_studies.each do |gstudy| %>
      <tr>
      <td><%= gstudy.created_at.strftime("%B %d, %Y") %></td>
      <td><%= link_to gstudy.title, general_market_study_path(gstudy) %></td>
      <td><%= gstudy.content.html_safe %></td>


      <% if current_user.present? and current_user.is_admin? %>
        <td><span class="glyphicon glyphicon-scissors" aria-hidden="true"></span> &nbsp;&nbsp;<%= link_to 'Edit', edit_general_market_study_path(gstudy) %></td>

        <td><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> &nbsp;&nbsp;<%= link_to 'Delete', gstudy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
      <% end %>
    
  </tbody>

  </table>

  <center><%= paginate @general_market_studies %></center>
</div>